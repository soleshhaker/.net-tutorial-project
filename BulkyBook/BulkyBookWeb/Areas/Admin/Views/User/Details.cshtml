@model UserViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Manage User Role</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="ApplicationUser.Id" hidden />
            <div class="border p-3">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ApplicationUser.Name" class="form-label"></label>
                    <input asp-for="ApplicationUser.Name" class="form-control" />
                    <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select">
                        <option disabled selected>-Select Role-</option>
                    </select>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="CompanyId" style="display:none;" asp-items="@Model.CompanyList" name="CompanyId" class="form-select">
                        <option disabled selected>-Select Company-</option>
                    </select>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">

                        <a asp-controller="User" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#ApplicationUser.Role').change(function () {
                var selection = $('#ApplicationUser.Role Option:Selected').text();
                if (selection == 'Company') {
                    $('#CompanyId').show();
                }
                else {
                    $('#CompanyId').hide();
                }
            })
        })
    </script>
}
